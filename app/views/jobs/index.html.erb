<div class="row">
  <div class="col-sm-9 col-lg-8 col-lg-offset-2">
    <%= form_tag search_jobs_path , :method => :get, :class => "jobs-search-form" do %>
      <div class="input-group">
        <input type="text" class="form-control" name="q" value="<%= params[:q] %>" placeholder="搜索工作关键字...">

        <span class="input-group-btn">
          <button type="submit" class="btn btn-default">
            <span class="glyphicon glyphicon-search"></span>
          </button>
        </span>
      </div>
    <% end %>
  </div>

  <ul id="myTab" class="nav nav-tabs" role="tablist">
      <li class="">
        <a data-toggle="tab" href="#category-0">产品</a>
      </li>
      <li class="active">
        <a data-toggle="tab" href="#category-1">技术</a>
      </li>
      <li class="">
        <a data-toggle="tab" href="#category-3">设计</a>
      </li>
      <li class="">
        <a data-toggle="tab" href="#category-4">运营</a>
      </li>
      <li class="">
        <a data-toggle="tab" href="#category-5">市场与销售</a>
      </li>
      <li class="">
        <a data-toggle="tab" href="#category-7">职能</a>
      </li>
    </ul>

<div class="pull-right">
    <%= link_to("Add a job", new_job_path, :class => "btn btn-default" ) %>
</div>

<div class="dropdown clearfix pull-right">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      排序
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
        <li>
          <%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound")) %>
        </li>
        <li>
            <%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound")) %>

        </li>
        <li>
          <%= link_to("按照发表时间排序", jobs_path ) %>

        </li>
    </ul>
</div>

                <table class="table table-boldered">
                    <thead>
                        <tr>
                            <td>
                                职缺</td>
                            <td>薪资范围</td>
                            <td>刊登时间</td>
                        </tr>

                    </thead>
                    <tbody>
                        <% @jobs.each do |job| %>
                        <tr>
                            <td>
                                <%= link_to(job.title, job_path(job), :target => "_blank") %>
                            </td>
                            <td width="30%">
<span class="badge badge-info">
<span class="fa -fa-rmb"></span>  <%= job.wage_lower_bound %> - <%= job.wage_upper_bound %> 元
</span>
</td>
<td width="10%"><%= local_time(job.created_at, '%B %e, %Y %l:%M%p') %></td>
                        </tr>
                        <% end %>
                    </tbody>

                </table>
