<div class="col-md-12">
    <div class="panel panel-default">
      <div class="dropdown clearfix pull-right">
          <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              排序
              <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
              <li>
      <%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound")) %>
              </li>
              <li>
      <%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound")) %>

              </li>
              <li>
                  <%= link_to("按照发表时间排序", jobs_path ) %>
              </li>
          </ul>
      </div>
      <div class="panel-heading center">职缺列表</div>
      <!-- Table -->
      <table class="table">
        <table class="table table-boldered">
            <thead>
                <tr>
                    <td>职缺</td>
                    <td>薪资范围</td>
                    <td>刊登时间</td>
                    <td>点赞</td>
                    <td>投递</td>
                    <td>收藏</td>
                </tr>

            </thead>
            <tbody>
                <% @jobs.each do |job| %>
                <tr>
                    <td>
                  <%= link_to(job.title, job_path(job), :target => "_blank") %>
                    </td>
                    <td>
                        <span class="badge badge-info">
                            <span class="fa -fa-rmb"></span>
    <%= job.wage_lower_bound %>-<%= job.wage_upper_bound %> 元
                        </span>
                    </td>
                    <td><%= local_time(job.created_at, '%B %e, %Y %l:%M%p') %></td>

      <td>
        <%= job.voters.count %>
        <% if current_user && current_user.is_voter_of?(job) %>
        <%= link_to("", downvote_job_path(job), method: :post, class: "fa fa-heart", style: "color:red;") %>
        <% else %>
        <%= link_to("", upvote_job_path(job), method: :post, class: "fa fa-heart-o") %>
        <% end %>
      </td>

         <td>
         <% if current_user && current_user.has_applied?(job) %>
         <%= link_to("已投递", new_job_resume_path(job), class: "btn btn-info btn-sm disabled", method: :get) %>
         <% else %>
         <%= link_to("投递履历", new_job_resume_path(job), class: "btn btn-info btn-sm", method: :get) %>
           <% end %>
         </td>
        <td>
          <% if current_user && current_user.is_favorite_of?(job) %>
          <%= link_to('取消收藏'.html_safe, favorite_job_path(job, type: "unfavorite"), method: :put) %>
        <% else %>
        <%= link_to('添加收藏'.html_safe, favorite_job_path(job, type: "favorite"), method: :put) %>
        <% end %>
           </td>
                </tr>
                <% end %>
            </tbody>
        </table>
      </table>
    </div>
  </div>
