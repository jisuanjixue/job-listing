<div class="container">
    <div class="row main">
      <div class="main-left">
      <h1> 新增工作 </h1>
      <br>
      <br>
          <%= simple_form_for @job do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs col-md-10 col-lg-6">
            <div class="cols-sm-10">
                <%= f.input :title, required: true, autofocus: true %>
            </div>
            <div class="cols-sm-10">
                <%= f.input :description %>
            <div class="cols-sm-10">
                <%= f.input :wage_lower_bound, :label => "薪资下限", required: true %>
            </div>
            <div class="cols-sm-10">
                <%= f.input :wage_upper_bound, :label => "薪资上限", required: true %>
            </div>
            <div class="cols-sm-10">
                <%= f.input  :contact_email, :label => "联系邮箱", required: true %>
            </div>
            <div class="cols-sm-10">
                <%= select_tag(:category_id, options_for_select(@categories), :prompt => "类别") %>
            </div>
            <div class="cols-sm-10">
                <%= f.input :is_hidden, as: :boolean  %>
            </div>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "提交" %>
          </div>
          <% end %>

      </div>
      </div>
      </div>
